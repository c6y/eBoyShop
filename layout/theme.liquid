<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en" {% if template contains 'product' %} itemscope itemtype="http://schema.org/Product" {% else %} itemscope itemtype="http://schema.org/Corporation" {% endif %} >
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
  <meta name="verify-v1" content="04j4vdmML7nSIzpyj/OLXES0aFM+QpWTahvUt7KLrp0=" />
  <meta name="verify-v1" content="IujPWjbOSmByZuBsM3v4W3VNo+/8D9ptahnmLqcgt2s=" />
  {% if template == 'product' %}
    <!-- Facebook iLike Open Graph -->
    <meta property="og:title" content="eBoy&#174; {{ page_title }}"/>
    <meta property="og:type" content="product"/>
    <meta property="og:url" content="{{ shop.url }}{{ product.url }}" />
    <meta property="og:image" content="{{ product.featured_image | product_img_url: 'medium' }}" />
    <meta property="og:site_name" content="{{ shop.name }}" />
    <meta property="og:email" content="{{ shop.email }}" />
    <meta property="og:description" content="{{ page_description }}" />
    <meta property="fb:admins" content="556606034" />
    <!-- Google+ Itemscope and Itemtype -->
    <meta itemprop="name" content="eBoy&#174; {{ page_title }}">
    <meta itemprop="image" content="{{ product.featured_image | product_img_url: 'large' }}">
    <meta itemprop="url" content="{{ shop.url }}{{ product.url }}">
    <meta itemprop="brand" content="{{ product.vendor }}">
    <meta itemprop="description" content="{{ page_description }}">
  {% elsif template == '404' %}
    <title>Page Not Found | {{ shop.name }}</title>
  {% else %}
    <!-- Google+ Itemscope and Itemtype -->
    <meta itemprop="name" content="{{shop.name}} - {{page_title}}">
    <meta itemprop="description" content="{{ page_description }}">
    <meta itemprop="brand" content="eBoy">
    <meta itemprop="email" content="shopca@eboy.com">
  {% endif %}

  {% if template == 'index' %}
    <title>{{shop.name}} - Home</title>
  {% else %}
    <title>{{shop.name}} - {{page_title}}</title>
  {% endif %}

  <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Oswald">
  <link rel="icon" href="{{ 'favicon.png' | asset_url }}" />
  <link rel="shortcut icon" href="{{ 'favicon.png' | asset_url }}" />
  <link rel="favicon" href="{{ 'favicon.png' | asset_url }}" />

  {{ 'css-shop-reset.css' | asset_url | stylesheet_tag }}
  {{ 'css-shop-layout.css' | asset_url | stylesheet_tag }}
  {{ 'css-shop-typography.css'| asset_url | stylesheet_tag }}
  {{ 'css-shop-colors-background.css' | asset_url | stylesheet_tag }}
  {{ 'css-shop-colors.css' | asset_url | stylesheet_tag }}
  {{ 'css-shop-icons.css' | asset_url | stylesheet_tag }}
  {{ 'css-shop-debugX.css' | asset_url | stylesheet_tag }}
  {{ 'lightbox/v2/lightbox.css' | global_asset_url | stylesheet_tag }}
  {{ 'lightbox/v2/lightbox.js' | global_asset_url | script_tag }}
  {{ 'script-shop.js' | asset_url | script_tag }}
  {{ 'script-dropdownmenu_01k.js' | asset_url | script_tag }}
  {{ 'script-toggle_01k.js' | asset_url | script_tag }}

  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.5.1/jquery.js"></script>
  <script type="text/javascript">
    var loadingImage = '{{ 'lightbox/v2/loading.gif' | global_asset_url }}';
    var closeButton  = '{{ 'lightbox/v2/close.gif' | global_asset_url }}';
  </script>
  <script type="text/javascript">
    function clearMe(formfield){
      if (formfield.defaultValue==formfield.value)
      formfield.value = ""
    }
  </script>

  {{ content_for_header }}
</head>

<body id="page-{{template}}">

  <!-- <div class="topnewsbar">
    TEST Check our <a href="http://db.eboy.com" target="_blank">database</a> | follow us on <a href="https://twitter.com/eBoyArts" target="_blank">Twitter</a>, <a href="https://www.instagram.com/eboyarts/" target="_blank">Instagram</a> and <a href="https://ello.co/eboy" target="_blank">Ello</a>
  </div> -->

  <div id="autocenterbox">

    <div id="header">
      <ul id="sddm">
        <li class="tab-on">
          <a class="logotype" href="/" onmouseover="mopen('m3')" onmouseout="mclosetime()">eBoy</a>
        </li>
        <!-- <li class="tab-off">
          <a class="logotype" href="http://hello.eboy.com/eboy/" onmouseover="mopen('m2')" onmouseout="mclosetime()">Work</a>
        </li> -->
      </ul>
    </div>

    <div id="borderbox">
      <div id="carthead">
        <h1 id="status-country">
          <a href="/">Shop</a>
          {% case template %}
            {% when 'collection' %}
              &gt; <b>{{collection.title}}</b>
            {% when 'product' %}
              &gt; {{ product.type | link_to_type }} &gt; <b>{{ product.title }}</b>
            {% else %}
          {% endcase %}
        </h1>
        <h1 id="cartcount"><a href="/cart" class="mdi-cart">Cart:</a> {{ cart.item_count }}</h1>
      </div>

      <div id="contentbox">
        {% case template %}
          {% when 'product' %}
            <div id="content-product">
              {{ content_for_layout }}
            </div>
            {% include 'sidebar-product' %}
          {% else %}
            {% include 'sidebar-left' %}
            <div id="content">
              {{ content_for_layout }}
            </div>
        {% endcase %}
      </div>

      <div id="footer">
        <form id="searchform" method="get" action="/search">
          <input type="text" value="Search Shop" name="q" id="s" size="24" onfocus="clearMe(this)"/>
        </form>
        <div id="footertxt">
          {% for link in linklists.footer.links %}
            {{ link.title | link_to: link.url }} |
          {% endfor %}
          Powered by <a href="http://shopify.com" title="powered by Shopify">Shopify</a>
        </div>
      </div>

    </div><!-- /#borderbox -->
  </div> <!-- /#autocenterbox -->
</body>
</html>
