<div id="sidebar-menu">
  <ul class="sidebar-menu-collections">
    {% for link in linklists.main-menu.links %}
      {% if collection.title == link.title %}
        <li class="active-collection">{{ link.title }}</li>
      {% else template.name == 'index'%}
        <li>{{ link.title | link_to: link.url }}</li>
      {% endif %}
    {% endfor %}
  </ul>
  <hr/>
  <ul class="sidebar-menu-links">
    <li class="exlink">
      <a href="https://db.eboy.com/" target="_blank" class="icon-database">Portfolio</a>
    </li>
    <li class="exlink">
      <a href="https://twitter.com/eboyarts/" target="_blank" class="icon-twitter">Twitter</a>
    </li>
    <li class="exlink">
      <a href="https://www.instagram.com/eboyarts/" target="_blank" class="icon-instagram">Instagram</a>
    </li>
  </ul>
</div>
