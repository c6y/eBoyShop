$fontsize-button-small: {{ settings.fontsize-button-small }};
$color-link: {{ settings.color-link }};
$color-black: {{ settings.color-black }};
$headline-font: {{ settings.headline-font }};
$cell-margin: {{ settings.cell-margin }};

$cell-margin-half: $cell-margin * 0.5;
$cell-margin-double: $cell-margin * 2;
$cell-margin-triple: $cell-margin * 3;

.checkoutbutton {
  font-family: $headline-font;
  background-color: $color-link;
  color: white;
  border: none;
  padding: $cell-margin $cell-margin-triple;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: $fontsize-button-small;
  line-height: $fontsize-button-small;
  cursor: pointer;

  &:active {
    background-color: black;
    color: white;
  }
}

.updatebutton {
  background-color: $color-black;
  opacity: 0.2;
  color: white;
  border: none;
  font-size: inherit;
  cursor: pointer;
  margin: $cell-margin-half;
  padding: $cell-margin-half $cell-margin-double;
  font-family: $headline-font;

  &:active {
    opacity: 1;
  }
}
