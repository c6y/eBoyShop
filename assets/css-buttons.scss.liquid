$fontsize-button-small: {{ settings.fontsize-button-small }};
$color-link: {{ settings.color-link }};
$color-black: {{ settings.color-black }};
$button-font: {{ settings.button-font }};
$cell-margin: {{ settings.cell-margin }};

$cell-margin-half: $cell-margin * 0.5;
$cell-margin-2x: $cell-margin * 2;
$cell-margin-3x: $cell-margin * 3;

.checkoutbutton,
.updatebutton,
.buybutton,
.linkbutton,
.soldbutton,
.soonbutton {
  -webkit-appearance: none;
  -moz-appearance: none;
  font-style: italic;
  font-family: $button-font;
  border-radius: 0.25em;
}


.checkoutbutton {
  background-color: $color-link;
  color: white;
  border: none;
  padding: $cell-margin $cell-margin-3x;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: $fontsize-button-small;
  line-height: $fontsize-button-small;
  cursor: pointer;
  text-transform: uppercase;

  &:active {
    background-color: black;
    color: white;
  }
}

.updatebutton {
  background-color: $color-black;
  opacity: 0.2;
  color: white;
  border: none;
  font-size: inherit;
  cursor: pointer;
  margin: $cell-margin-half;
  padding: $cell-margin-half $cell-margin-2x;

  &:active {
    opacity: 1;
  }
}

.buybutton,
.linkbutton,
.soldbutton,
.soonbutton {
  color: white;
  border: none;
  padding: $cell-margin-2x $cell-margin-half;
  margin: $cell-margin-2x 0 0 0;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: $fontsize-button-small;
  line-height: $fontsize-button-small;
  width: 100%;
  font-weight: 400;
  box-sizing: border-box;
  text-transform: uppercase;
}

.buybutton {
  background-color: $color-link;
  cursor: pointer;
}

.soldbutton {
  background-color: red;
}

.soonbutton {
  background-color: #383521;
}

.linkbutton {
  background-color: #383521;

  a {
    color: $color-black;
    text-decoration: none;
  }
}
