$fontsize-button-small: {{ settings.fontsize-button-small }};
$color-link: {{ settings.color-link }};
$color-black: {{ settings.color-black }};
$headline-font: {{ settings.headline-font }};
$cell-margin: {{ settings.cell-margin }};

$cell-margin-half: $cell-margin * 0.5;
$cell-margin-2x: $cell-margin * 2;
$cell-margin-3x: $cell-margin * 3;

.checkoutbutton {
  font-family: $headline-font;
  background-color: $color-link;
  color: white;
  border: none;
  padding: $cell-margin $cell-margin-3x;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: $fontsize-button-small;
  line-height: $fontsize-button-small;
  cursor: pointer;

  &:active {
    background-color: black;
    color: white;
  }
}

.updatebutton {
  background-color: $color-black;
  opacity: 0.2;
  color: white;
  border: none;
  font-size: inherit;
  cursor: pointer;
  margin: $cell-margin-half;
  padding: $cell-margin-half $cell-margin-2x;
  font-family: $headline-font;

  &:active {
    opacity: 1;
  }
}

.buybutton,
.soldbutton,
.soonbutton {
  font-family: $headline-font;
  color: white;
  border: none;
  padding: $cell-margin $cell-margin-3x;
  margin: $cell-margin-2x 0 0 0;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: $fontsize-button-small;
  line-height: $fontsize-button-small;
  width: 100%;
  font-weight: 400;
  box-sizing: border-box;
}

.buybutton {
  background-color: $color-link;
  cursor: pointer;
}

.soldbutton {
  background-color: red;
}

.soonbutton {
  background-color: black;
}
