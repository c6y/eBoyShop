// Shared properties
#appbody {
  flex-direction: wrap;
  padding: 0;
  margin: 0;
  display: flex;

  // 1 column container
  @media only screen
    and (min-width: (1 * $cell + 2 * $cell-margin))
    and (max-width: (2 * $cell + 3 * $cell-margin)) {
    width: 1 * $cell + 2 * $cell-margin;
    flex-direction: column;
  }
}
