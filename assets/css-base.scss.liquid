$cell: {{ settings.cell }};
$cell-margin: {{ settings.cell-margin }};
$content-min-width: 2 * $cell + 3 * $cell-margin;
$breakpoint: {{ settings.breakpoint }};
$color-2c: {{ settings.color-2c }};
$color-3c: {{ settings.color-3c }};
$color-4c: {{ settings.color-4c }};
$color-5c: {{ settings.color-5c }};
$color-6c: {{ settings.color-6c }};

html {
  height: 100%;
}

body {
  margin: 0;
  padding: 0 0 0 0;
  height: 100%;
  width: 100%;
  display: table;
}

#autocenterbox {
  margin: 0 auto;
  height: 100%;
  display: flex;
  flex-direction: column;

  @media only screen
    and (max-device-width: $breakpoint) {
    width: 100%;
  }

  @media only screen
    and (min-device-width: $breakpoint) {
    min-width: $content-min-width;
  }

  // 2 column container
  @media only screen
    and (min-width: (2 * $cell + 3 * $cell-margin))
    and (max-width: (3 * $cell + 4 * $cell-margin)) {
    width: 2 * $cell + 3 * $cell-margin;
    background-color: $color-2c;
  }
  // 3 column container
  @media only screen
    and (min-width: (3 * $cell + 4 * $cell-margin))
    and (max-width: (4 * $cell + 5 * $cell-margin)) {
    width: 3 * $cell + 4 * $cell-margin;
    background-color: $color-3c;
  }
  // 4 column container
  @media only screen
    and (min-width: (4 * $cell + 5 * $cell-margin))
    and (max-width: (5 * $cell + 6 * $cell-margin)) {
    width: 4 * $cell + 5 * $cell-margin;
    background-color: $color-4c;
  }
  // 5 column container
  @media only screen
    and (min-width: (5 * $cell + 6 * $cell-margin))
    and (max-width: (6 * $cell + 7 * $cell-margin)) {
    width: 5 * $cell + 6 * $cell-margin;
    background-color: $color-5c;
  }
  // 6 column container
  @media only screen
    and (min-width: (6 * $cell + 7 * $cell-margin)) {
    width: 6 * $cell + 7 * $cell-margin;
    background-color: $color-6c;
  }

  min-height: 100%;
  // background: @color-0;
}
