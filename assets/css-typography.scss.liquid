$cell: {{ settings.cell }};
$cell-margin: {{ settings.cell-margin }};
$content-min-width: 2 * $cell + 3 * $cell-margin;
$breakpoint: {{ settings.breakpoint }};

$font-size-basic: {{ settings.font-size-basic }};
$font-leftlinks: {{ settings.font-sidebar-big }};
$fontsize-leftlinks: {{ settings.fontsize-sidebar-big }};
$fontweight-leftlinks: {{ settings.fontweight-sidebar-big }};
$fontsize-producttopinfo: {{ settings.fontsize-sidebar-big }};
$fontweight-producttopinfo: {{ settings.fontweight-bold-big }};
$fontsize-buttonsmall: {{ settings.fontsize-button-small }};
$headline-font: {{ settings.headline-font }};
$body-font: {{ settings.body-font }};
$cart-font: {{ settings.cart-font }};
$logo-font: {{ settings.logo-font }};

$fontsize-searchform: {{ settings.fontsize-sidebar-big }} * 0.75;
$cell-margin-half: $cell-margin * 0.5;
$cell-margin-2x: $cell-margin * 2;
$cell-margin-3x: $cell-margin * 3;
$cell-margin-4x: $cell-margin * 4;


/*eBoy SHOP-TYPOGRAPHY CSS*/

// Load local fonts
@font-face {
  font-family: Moxie;
  src: url(Moxie-Bold.otf);
}

@font-face {
  font-family: Product-Sans-Regular;
  src: url(Product-Sans-Regular.ttf);
}

/* Global */
body {
  font-family: $body-font;
  font-size: $font-size-basic;
}

b {
  font-weight: 500;
}

a,
a:visited {
  text-decoration: none;
}

a:hover {
  text-decoration: underline;
}

/* Header Styles */
#appheader {
  font-size: 48px;
  line-height: 64px;
}

#appheader,
#appheader a,
#appheader a:visited,
#appheader a:hover {
  text-decoration: none;
}

#logotype {
  // font-size: 4rem;
  font-size: 6rem;
  // font-weight: normal;
  font-family: $logo-font;
  text-transform: uppercase;
  line-height: 1em;
}

/* Submenublock */
h1 {

}

#carthead {
  font-family: $headline-font;
  // font-family: 'Roboto Condensed', sans-serif;
  line-height: 1.2em;
  font-weight: 400;
  font-size: 1.5rem;

  // // mobile 2 column width
  // @media only screen
  //   and (max-width: (3 * $cell + 4 * $cell-margin)) {
  //   font-size: 1.2rem;
  // }
  //
  // // desktop 3+ column width
  // @media only screen
  //   and (min-width: (3 * $cell + 4 * $cell-margin)) {
  //   font-size: 1.5rem;
  // }

  #breadcrumb,
  #cartcount {
    font-size: inherit;
    font-weight: inherit;
    line-height: inherit;
  }
}

#sidebarleft {
  font-family: $font-leftlinks;
  font-size: $fontsize-leftlinks;
  font-weight: $fontweight-leftlinks;
  line-height: 1.5rem;

  .leftlinks-collections,
  .leftlinks-other {
    li a {
      text-decoration: none;
    }
  }

  .leftlinks-collections {
    text-transform: lowercase;
  }
}

/* Product Pages */

.producttopinfo,
.producttopinfosold {
  h2 {
    font-size: $fontsize-producttopinfo;
    font-weight: $fontweight-producttopinfo;
  };
}

.price {
  font-family: $body-font;
  font-size: $fontsize-producttopinfo;
  font-weight: $fontweight-producttopinfo;
}

.limited {
  font-size: 18px;
  line-height: 1.2em;
  font-weight: bold;
}

#description {
  line-height: 1.5rem;
  font-family: $body-font;
}

#description ul {
  margin-bottom: 0.5rem;
}

#description ul li {
  margin-left: 1em;
  list-style-type: circle;
}

#description #details a:hover {
  text-decoration: underline;
}

#productrelated h2 {
  font-size: 24px;
}

#footer {
  font-size: 24px;
  line-height: 1.4em;
}

#footer a {
  text-decoration: none;
}

#footertxt {
  font-family: $body-font;
  font-size: 12px;
  line-height: 1.4em;
}

#footertxt a:hover {
  text-decoration: underline;
}

/* Collection Pages */
.product {
  font-family: $body-font;
}

.product .productbasic h3 {
  font-size: 1rem;
  font-weight: 400;
}

.product .money {
  font-size: 1.5rem;
  font-weight: normal;
}

#pagination {
  font-size: 24px;
  font-weight: regular;
}

/* Cart Page */
#cart {
  font-family: $cart-font;
}

.money,
.moneysoldout {
  font-weight: bold;
}

#line-items {
  font-size: 1rem;

  a {
    text-decoration: none;
  }

  input {
    font-size: inherit;
  }
}

.cartbanner {
  // font-family: $headline-font;
  font-family: $cart-font;
}

#cart ul li h3 a {
  text-decoration: none;
}

.itemcost {
  font-size: 14px;
}

.deleterow .remove {
  font-size: 9px;
  text-decoration: none;
}

.checkoutrow {
  font-size: $fontsize-buttonsmall;
}

a.shipinfo {
  text-decoration: none;
}

a:hover.shipinfo {
  text-decoration: none;
  text-decoration: underline;
}

/* Page */
#page {
  .textile {
    font-family: $body-font;

    h3 {
      font-size: 1em;
      font-weight: 600;
    }
    p,
    ul,
    h3 {
      padding: 0 0 $cell-margin-2x 0;
      margin: 0;
    }
  }
}


#page .textile br {
  margin: 0;
}

#page .textile h3 {
  font-family: $body-font;
  font-weight: bold;
  margin: 0;
}

#page ul li {
  margin-left: 1em;
  list-style-type: square;
}

#page ul li ul li {
  margin-left: 1em;
  list-style-type: circle;
}

#page em {
  background-color: beige;
  color: brown;
  padding: 12px;
  display: block;
}

/* Footer */
#footer {
  line-height: 24px;
  font-size: 24px;
}

#footer #searchform #s {
  font-family: $body-font;
  font-size: $fontsize-searchform;
}
