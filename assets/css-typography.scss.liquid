$cell: {{ settings.cell }};
$cell-margin: {{ settings.cell-margin }};
$content-min-width: 2 * $cell + 3 * $cell-margin;
$breakpoint: {{ settings.breakpoint }};

$font-size-basic: {{ settings.font-size-basic }};
$font-leftlinks: {{ settings.font-sidebar-big }};
$fontsize-leftlinks: {{ settings.fontsize-sidebar-big }};
$fontweight-leftlinks: {{ settings.fontweight-sidebar-big }};
$fontsize-producttopinfo: {{ settings.fontsize-sidebar-big }};
$fontweight-producttopinfo: {{ settings.fontweight-bold-big }};
$fontsize-buttonsmall: {{ settings.fontsize-button-small }};
$body-font: {{ settings.body-font }};
$body-lineheight: {{ settings.body-lineheight }};
$cart-font: {{ settings.cart-font }};
$logo-font: {{ settings.logo-font }};

$fontsize-searchform: {{ settings.fontsize-sidebar-big }} * 0.75;
$cell-margin-half: $cell-margin * 0.5;
$cell-margin-2x: $cell-margin * 2;
$cell-margin-3x: $cell-margin * 3;
$cell-margin-4x: $cell-margin * 4;

/*eBoy SHOP-TYPOGRAPHY CSS*/
// Load external fonts
@import url('https://fonts.googleapis.com/css?family=Josefin+Sans:400i|Roboto+Mono');

// Load local fonts
@font-face {
  font-family: Moxie;
  src: url(Moxie-Bold.otf);
}

/* Global */
body {
  font-family: $body-font;
  font-size: $font-size-basic;
}

b {
  font-weight: 500;
}

a,
a:visited {
  text-decoration: none;
}

a:hover {
  text-decoration: underline;
}

/* Header Styles */
#appheader,
#appheader a,
#appheader a:visited,
#appheader a:hover {
  text-decoration: none;
}

#logotype {
  font-size: 6rem;
  line-height: 1em;
  font-family: $logo-font;
  font-weight: 400;
  text-transform: uppercase;
  letter-spacing: -5px;
}

/* Submenublock */
#carthead {
  line-height: 1.2em;
  font-weight: 400;

  // mobile 2 column width
  @media only screen
    and (max-width: (3 * $cell + 4 * $cell-margin)) {
    font-size: 2rem;
  }

  // desktop 3+ column width
  @media only screen
    and (min-width: (3 * $cell + 4 * $cell-margin)) {
    font-size: 1.5rem;
  }

  #breadcrumb,
  #cartcount {
    font-size: inherit;
    font-weight: inherit;
    line-height: inherit;
  }
}

#sidebarleft {
  font-family: $font-leftlinks;
  font-size: $fontsize-leftlinks;
  font-weight: $fontweight-leftlinks;
  line-height: 1.5rem;

  .leftlinks-collections,
  .leftlinks-other {
    li a {
      text-decoration: none;
    }
  }

  .leftlinks-collections {
    text-transform: lowercase;
  }
}

/* Product Pages */

.producttopinfo,
.producttopinfosold {
  h2 {
    font-size: $fontsize-producttopinfo;
    font-weight: $fontweight-producttopinfo;
  };
}

.price {
  font-family: $body-font;
  font-size: $fontsize-producttopinfo;
  font-weight: $fontweight-producttopinfo;
}

.limited {
  font-size: 18px;
  line-height: 1.2em;
  font-weight: bold;
}

#description {
  // line-height: 1.5rem;
  font-family: $body-font;
  line-height: $body-lineheight;

  p {
    margin: 0 0 $cell-margin-2x 0;
  }

  ul {
    margin: 0 0 $cell-margin-2x 0;
    padding: 0 0 0 $cell-margin-2x;

    li {
      margin-left: $cell-margin;
      list-style-type: circle;
    }
  }
}

#productrelated h2 {
  font-size: 24px;
}

/* Collection Pages */
.product {
  font-family: $body-font;
}

.product .productbasic h3 {
  font-size: 1rem;
  font-weight: 400;
}

.product .money {
  font-size: 1.5rem;
  font-weight: normal;
}

#pagination {
  font-size: 24px;
  font-weight: regular;
}

/* Cart Page */
#cart {
  font-family: $cart-font;
}

.money {
  font-weight: bold;
}

#line-items {
  font-size: 1rem;

  a {
    text-decoration: none;
  }

  input {
    font-size: inherit;
  }
}

.cartbanner {
  font-size: 1.5rem;
}

.emptycart {
  font-family: $cart-font;
  font-size: inherit;
}

#cart ul li h3 a {
  text-decoration: none;
}

.itemcost {
  font-size: 14px;
}

.deleterow .remove {
  font-size: 9px;
  text-decoration: none;
}

.checkoutrow {
  font-size: $fontsize-buttonsmall;
}

a.shipinfo {
  text-decoration: none;
}

a:hover.shipinfo {
  text-decoration: none;
  text-decoration: underline;
}

/* Page */
#page {
  h1 {
    font-weight: 400;
    line-height: $cell-margin-3x;
  }

  .textile {
    font-family: $body-font;

    h3 {
      font-size: 1em;
      font-weight: 600;
      font-style: italic;
    }

    .addressblock,
    p,
    ul,
    h3 {
      padding-top: 0;
      padding-right: $cell-margin-4x;
      padding-left:  $cell-margin-2x;
      margin: 0;
    }

    .addressblock,
    p,
    ul, {
      padding-bottom: $cell-margin-4x;
    }

    h3 {
      padding-bottom: $cell-margin-2x;
    }
  }
}

#page .textile br {
  margin: 0;
}

#page .textile h3 {
  font-family: $body-font;
  font-weight: bold;
  margin: 0;
}

#page ul li {
  margin-left: 1em;
  list-style-type: square;
}

#page ul li ul li {
  margin-left: 1em;
  list-style-type: circle;
}

#page em {
  background-color: beige;
  color: brown;
  padding: 12px;
  display: block;
}

/* Footer */
#footer {
  font-size: 1.5rem;
  line-height: 2rem;
  font-family: $body-font;

  a,
  a:hover {
    text-decoration: none;
  }

  #searchform #s,
  #footertxt {
    font-family: inherit;
    font-size: inherit;
  }
}
