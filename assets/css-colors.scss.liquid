$color-tab: #f2eed9;
$color-logo: #0ff;
$color-linkmenu: rgba(0, 230, 230, 0.6);
$color-link: dodgerblue;
$color-sidebox-text: {{ settings.color-sidebox-text }};
$color-sidebox-link: {{ settings.color-sidebox-link }};
$color-black: #383521;
$color-footer: #6c6757;

/* Global */
a,
a:visited,
a:hover {
  color: $color-link;
}

// #contentbox {
//   background-color: white;
// }

/* Header */
body {
  #appheader {
    background-color: none;

    .tab-on {
      a,
      a:visited {
        background-color: $color-tab;
        color: $color-logo;
      }
    }

    .tab-off {
      a,
      a:visited {
        background-color: $color-black;
        color: yellow;
      }
    }
  }
}

body #appheader #sddm .tab-on a:hover,
body #appheader #sddm .tab-off a:hover {
  background-color: yellow;
  color: #383521;
}

/* Colors Submenu */
#appheader .status-shop-country {
  color: #004069;
}

#carthead {
  background-color: $color-tab;
}

#carthead #breadcrumb {
  color: $color-black;
}

#breadcrumb a,
#cartcount,
#cartcount a {
  color: $color-linkmenu;
}

#breadcrumb a:hover,
#cartcount a:hover {
  color: $color-black;
  background-color: $color-linkmenu;
}

/* Left Navigation */
#sideBox h3 {
  color: #333;
}

ul.leftlinks li a {
  color: $color-sidebox-link;
}

ul.leftlinks li a:hover {
  color: white;
  background-color: $color-sidebox-link;
}

/* Cart Page */
#cart {
  background-color: #edece6;
}

h3.saverow {
  color: brown;
  background: beige;
}

.deleterow .remove {
  background-color: #ddd;
  color: #888;
}

.deleterow .remove:hover {
  color: #ddd;
  background-color: #888;
}

.moneysoldout {
  color: #777;
}

#cart label {
  color: #444;
}

#cart ul li h3 a {
  color: #333;
}

.itemcost {
  color: #777;
}

#line-items li .txtcartrow .producttitle,
#line-items li .txtcartrow .producttitle a {
  color: #444;
}

#line-items li#total {
  color: #666;
}

#line-items li#total .money {
  color: #3f3800;
}

#line-items li#total .buttonAsLink {
  color: #aaa;
  background-color: #ddd;
}

#line-items li#total .buttonAsLink:hover {
  background-color: #aaa;
  color: #ddd;
}

.checkoutrow {
  background-color: white;
}

.checkoutrow .buttonAsLink {
  color: white;
  background-color: $color-link;
}

.checkoutrow .buttonAsLink:hover {
  color: white;
  background-color: green;
}

.shipinfo {
  color: $color-link;
}

/* Page */
#page h1 {
  background-color: $color-link;
}

/* PRODUCTS */

/* Products on the front page */
#frontarticles h1 {
  background-color: black;
  color: white;
}

#frontarticles h1 a {
  color: white;
}

#frontpage p.money {
  color: #444;
}

/* Collection Pages */
#collectionpage h1 {
  color: #4b4944;
  background-color: white;
}

.gallery .product {
  background-color: MintCream;
}

#collectionpage h2 {
  color: #333;
}

#pagination a {
  color: lightgrey;
  background: #fafafa;
}

#pagination a:hover,
#pagination a:active {
  background: $color-black;
  color: yellow;
}

#pagination .current {
  color: $color-black;
  background: white;
}

.gallery .product .money {
  color: $color-black;
}

/* Search Pages (mostly identical to the Collection Page) */
#searchpage h1 {
  color: white;
  background-color: #3db741;
}

/* Product Pages */
.BUYbuttonAsLink {
  color: $color-link;
  background-color: white;
}

.BUYbuttonAsLink:hover {
  background-color: $color-link;
  color: white;
}

.soldoutpro .BUYbuttonAsLink {
  color: red;
  background-color: white;
  border-color: red;
  /* overwrites default at css-shop-layout.css*/
}

.soldoutpro .BUYbuttonAsLink:hover {
  background-color: red;
  color: white;
  border-color: red;
  /* overwrites default at css-shop-layout.css*/
}

.productleft h2,
.productleftsold h2 {
  color: #3f3800;
}

#related h2 {
  color: #3f3800;
}

#pimage-select a img {
  background-color: #eee;
}

.price {
  color: $color-link;
}

ul#variants label {
  color: grey;
}

#productpage #description a {
  color: $color-link;
}

#productpage #description #details {
  background-color: #EDECE6;
  color: grey;
}

.limited {
  background-color: yellow;
}

.convert a {
  color: #8ec7ff;
}

/* Footer */
#footer {
  color: #999;
  background-color: #e6e3de;
  border-top-color: #dfdcd7;
}

#footer #searchform #s {
  border: #f6f6f6;
}

#footer a {
  color: $color-footer;
}

#footer #searchform #s {
  color: $color-footer;
  background-color: #f6f6f6;
}

#footer #footertxt {
  color: $color-footer;
}

#footer .spacedot {
  color: blue;
  background-color: orange;
}
