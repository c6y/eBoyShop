$cell: {{ settings.cell }};
$cell-margin: {{ settings.cell-margin }};
$content-min-width: 2 * $cell + 3 * $cell-margin;
$breakpoint: {{ settings.breakpoint }};
$color-header: {{ settings.color-header }};
$color-header-link: rgba(0, 230, 230, 0.6);
$color-logo: {{ settings.color-logo }};
$color-link: dodgerblue;
$color-sidebox-text: {{ settings.color-sidebox-text }};
$color-sidebox-link: {{ settings.color-sidebox-link }};
$color-black: #383521;
$color-footer: #6c6757;
$color-2c: {{ settings.color-2c }};
$color-3c: {{ settings.color-3c }};
$color-4c: {{ settings.color-4c }};
$color-5c: {{ settings.color-5c }};
$color-6c: {{ settings.color-6c }};

/* Global */
a,
a:visited,
a:hover {
  color: $color-link;
}

/* Header */
// dynamic color of logo changes based on columns
#logotype,
#logotype a,
#logotype a:visited {
  background-color: $color-header;
  color: $color-logo;

  // 2 column container
  @media only screen
  and (min-width: (2 * $cell + 3 * $cell-margin))
  and (max-width: (3 * $cell + 4 * $cell-margin)) {
    color: lighten( $color-2c, 10% );
  }

  // 3 column container
  @media only screen
  and (min-width: (3 * $cell + 4 * $cell-margin))
  and (max-width: (4 * $cell + 5 * $cell-margin)) {
    color: lighten( $color-3c, 10% );
  }

  // 4 column container
  @media only screen
  and (min-width: (4 * $cell + 5 * $cell-margin))
  and (max-width: (5 * $cell + 6 * $cell-margin)) {
    color: lighten( $color-4c, 10% );
  }

  // 5 column container
  @media only screen
  and (min-width: (5 * $cell + 6 * $cell-margin))
  and (max-width: (6 * $cell + 7 * $cell-margin)) {
    color: lighten( $color-5c, 10% );
  }

  // 6 column container
  @media only screen
  and (min-width: (6 * $cell + 7 * $cell-margin)) {
  width: 6 * $cell + 7 * $cell-margin;
    color: lighten( $color-6c, 10% );
  }
}

/* Colors Submenu */
#carthead {
  background-color: $color-header;
}

#carthead #breadcrumb {
  color: $color-black;
}

#breadcrumb a,
#cartcount,
#cartcount a {
  color: $color-header-link;
}

#breadcrumb a:hover,
#cartcount a:hover {
  color: $color-black;
  background-color: $color-header-link;
}

/* Left Navigation */
#sidebarleft h3 {
  color: #333;
}

ul.leftlinks li a {
  color: $color-sidebox-link;
}

ul.leftlinks li a:hover {
  color: white;
  background-color: $color-sidebox-link;
}

/* Cart Page */
#cart {
  background-color: #edece6;
}

h3.saverow {
  color: brown;
  background: beige;
}

.deleterow .remove {
  background-color: #ddd;
  color: #888;
}

.deleterow .remove:hover {
  color: #ddd;
  background-color: #888;
}

.moneysoldout {
  color: #777;
}

#cart label {
  color: #444;
}

#cart ul li h3 a {
  color: #333;
}

.itemcost {
  color: #777;
}

#line-items li .txtcartrow .producttitle,
#line-items li .txtcartrow .producttitle a {
  color: #444;
}

#line-items li#total {
  color: #666;
}

#line-items li#total .money {
  color: #3f3800;
}

#line-items li#total .buttonAsLink {
  color: #aaa;
  background-color: #ddd;
}

#line-items li#total .buttonAsLink:hover {
  background-color: #aaa;
  color: #ddd;
}

.checkoutrow {
  background-color: white;
}

.checkoutrow .buttonAsLink {
  color: white;
  background-color: $color-link;
}

.checkoutrow .buttonAsLink:hover {
  color: white;
  background-color: green;
}

.shipinfo {
  color: $color-link;
}

/* Page */
#page h1 {
  background-color: $color-link;
}

/* PRODUCTS */

/* Products on the front page */
#frontarticles h1 {
  background-color: black;
  color: white;
}

#frontarticles h1 a {
  color: white;
}

#frontbox p.money {
  color: #444;
}

/* Collection Pages */
#collectionbox h1 {
  color: #4b4944;
  background-color: white;
}

.product {
  background-color: MintCream;
}

#collectionbox h2 {
  color: #333;
}

#pagination a {
  color: lightgrey;
  background: #fafafa;
}

#pagination a:hover,
#pagination a:active {
  background: $color-black;
  color: yellow;
}

#pagination .current {
  color: $color-black;
  background: white;
}

.product .money {
  color: $color-black;
}

/* Search Pages (mostly identical to the Collection Page) */
#searchpage h1 {
  color: white;
  background-color: #3db741;
}

/* Product Pages */
.BUYbuttonAsLink {
  color: $color-link;
  background-color: white;
}

.BUYbuttonAsLink:hover {
  background-color: $color-link;
  color: white;
}

.soldoutpro .BUYbuttonAsLink {
  color: red;
  background-color: white;
  border-color: red;
  /* overwrites default at css-shop-layout.css*/
}

.soldoutpro .BUYbuttonAsLink:hover {
  background-color: red;
  color: white;
  border-color: red;
  /* overwrites default at css-shop-layout.css*/
}

.productleft h2,
.productleftsold h2 {
  color: #3f3800;
}

#related h2 {
  color: #3f3800;
}

#pimage-select a img {
  background-color: #eee;
}

.price {
  color: $color-link;
}

ul#variants label {
  color: grey;
}

#productpage #description a {
  color: $color-link;
}

#productpage #description #details {
  background-color: #EDECE6;
  color: grey;
}

.limited {
  background-color: yellow;
}

.convert a {
  color: #8ec7ff;
}

/* Footer */
#footer {
  color: #999;
  background-color: #e6e3de;
  border-top-color: #dfdcd7;
}

#footer #searchform #s {
  border: #f6f6f6;
}

#footer a {
  color: $color-footer;
}

#footer #searchform #s {
  color: $color-footer;
  background-color: #f6f6f6;
}

#footer #footertxt {
  color: $color-footer;
}

#footer .spacedot {
  color: blue;
  background-color: orange;
}
