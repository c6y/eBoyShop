$cell: {{ settings.cell }};
$cell-margin: {{ settings.cell-margin }};
$content-min-width: 2 * $cell + 3 * $cell-margin;
$breakpoint: {{ settings.breakpoint }};
$color-header-top: {{ settings.color-header-top }};
$color-header-cart: {{ settings.color-header-cart }};
$color-header-link: rgba(0, 230, 230, 0.6);
$color-logo: {{ settings.color-logo }};
$color-link: {{ settings.color-link }};
$color-sidebox-text: {{ settings.color-sidebox-text }};
$color-sidebox-link: {{ settings.color-sidebox-link }};
$color-black: {{ settings.color-black }};
$color-footer: #6c6757;
$color-2c: {{ settings.color-2c }};
$color-3c: {{ settings.color-3c }};
$color-4c: {{ settings.color-4c }};
$color-5c: {{ settings.color-5c }};
$color-6c: {{ settings.color-6c }};

/* Global */
body {
  color: $color-black;
}

a,
a:visited,
a:hover {
  color: $color-link;
}

/* Header */
#appheadertop {
  background-color: $color-header-top;
}

#logotype,
#logotype a,
#logotype a:visited {
  color: $color-logo;
}

/* Colors Submenu */
#carthead {
  background-color: $color-header-cart;
}

#carthead #breadcrumb {
  color: $color-black;
}

#breadcrumb a,
#cartcount,
#cartcount a {
  color: inherit;
}

ul.leftlinks li a {
  color: $color-link;
}

ul.leftlinks li a:hover {
  color: white;
  background-color: $color-link;
}

/* Cart Page */
#cart {
  background-color: #edece6;
}

.cartbanner {
  // color: $color-black;
  color: $color-header-top;
  background-color: #fbf6d7;
}

.deleterow .remove {
  background-color: #ddd;
  color: #888;
}

.deleterow .remove:hover {
  color: #ddd;
  background-color: #888;
}

.moneysoldout {
  color: #777;
}

#cart label {
  color: #444;
}

#cart ul li h3 a {
  color: $color-black;
}

.itemcost {
  color: #777;
}

#line-items li .txtcartrow .producttitle,
#line-items li .txtcartrow .producttitle a {
  color: $color-black;
}

.cartqty {
  color: #999;
}

#line-items li#total {
  color: #666;
}

#line-items li#total .money {
  color: #3f3800;
}

.shipinfo {
  color: $color-link;
}

/* Page */
#page h1 {
  // background-color: $color-link;
}

/* PRODUCTS */

/* Products on the front page */
#frontarticles h1 {
  background-color: $color-black;
  color: white;
}

#frontarticles h1 a {
  color: white;
}

#frontbox p.money {
  color: #444;
}

/* Collection Pages */
#collectionbox h1 {
  color: $color-black;
  background-color: white;
}

.product {
  background-color: MintCream;
}

#collectionbox h2 {
  color: #333;
}

#pagination a {
  color: lightgrey;
  background: #fafafa;
}

#pagination a:hover,
#pagination a:active {
  background: $color-black;
  color: yellow;
}

#pagination .current {
  color: $color-black;
  background: white;
}

.product .money {
  color: $color-black;
}

/* Search Pages (mostly identical to the Collection Page) */
#searchpage h1 {
  color: $color-black;
  background-color: $color-link;
}

/* Product Pages */
.producttopinfo h2,
.producttopinfosold h2 {
  color: $color-black;
}

#productrelated h2 {
  color: $color-black;
}

#pimage-select a img {
  background-color: #eee;
}

.price {
  color: $color-link;
}

ul#variants label {
  color: grey;
}

#productpage #description a {
  color: $color-link;
}

#productpage #description #details {
  background-color: #edece6;
  color: grey;
}

.limited {
  background-color: yellow;
}

.convert a {
  color: #8ec7ff;
}

/* Footer */
#footer {
  color: #999;
  background-color: #e6e3de;
  border-top-color: #dfdcd7;
}

#footer #searchform #s {
  border: #f6f6f6;
}

#footer a {
  color: $color-footer;
}

#footer #searchform #s {
  color: $color-footer;
  // background-color: #f6f6f6;
  background-color: rgba(255, 255, 255, 0.5);
}

#footer #footertxt {
  color: $color-footer;
}

#footer .spacedot {
  color: blue;
  background-color: orange;
}
