$cell: {{ settings.cell }};
$cell-margin: {{ settings.cell-margin }};
$content-min-width: 2 * $cell + 3 * $cell-margin;
$breakpoint: {{ settings.breakpoint }};
$color-productrelated: {{ settings.color-appbody }};
$color-header-top: {{ settings.color-header-top }};
$color-header-cart: {{ settings.color-header-cart }};
$color-header-cart-text: {{ settings.color-header-cart-text }};
$color-header-link: rgba(0, 230, 230, 0.6);
$color-logo: {{ settings.color-logo }};
$color-link: {{ settings.color-link }};
$color-sidebox-text: {{ settings.color-sidebox-text }};
$color-sidebox-link: {{ settings.color-sidebox-link }};
$color-black: {{ settings.color-black }};
$color-footer: #6c6757;
$color-2c: {{ settings.color-2c }};
$color-3c: {{ settings.color-3c }};
$color-4c: {{ settings.color-4c }};
$color-5c: {{ settings.color-5c }};
$color-6c: {{ settings.color-6c }};

/* Global */
body {
  color: $color-black;
}

a,
a:visited,
a:hover {
  color: $color-link;
}

/* Header */
#appheadertop {
  background-color: $color-header-top;
}

#logotype,
#logotype a,
#logotype a:visited {
  color: $color-logo;
}

/* Colors Submenu */
#carthead {
  background-color: $color-header-cart;
  color: $color-header-cart-text;

  #breadcrumb,
  #cartcount {
    color: inherit;

    a {
      color: inherit;
    }
  }
}

ul.leftlinks li a {
  color: $color-link;
}

ul.leftlinks li a:hover {
  color: white;
  background-color: $color-link;
}

/* Cart Page */

#cart {
  background-color: $color-header-cart;
  color: $color-header-cart-text;

  #line-items {
    .producttitle a {
      color: inherit;
    }
  }

}

.cartbanner {
  color: $color-header-cart-text;
}

.shipinfo {
  color: $color-link;
}

/* Page */
#page h1 {
  // background-color: $color-link;
}

/* PRODUCTS */

/* Products on the front page */
#frontarticles h1 {
  background-color: $color-black;
  color: white;
}

#frontarticles h1 a {
  color: white;
}

#frontbox p.money {
  color: #444;
}

/* Collection Pages */
#collectionbox h1 {
  color: $color-black;
  background-color: white;
}

.product {
  background-color: #effcff;
  box-shadow:
    0 2px 2px 0 rgba(0,0,0,.14),
    0 3px 1px -2px rgba(0,0,0,.2),
    0 1px 5px 0 rgba(0,0,0,.12);
}

#collectionbox h2 {
  color: red;
}

#pagination {
  a {
    color: $color-link;

    &:hover,
    &:active {
      color: $color-link;
    }
  }

  .current {
    color: $color-header-cart;
  }
}

.product .money {
  color: $color-black;
}

/* Search Pages (mostly identical to the Collection Page) */
#searchpage h1 {
  color: $color-black;
  background-color: $color-link;
}

/* Product Pages */
.producttopinfo h2,
.producttopinfosold h2 {
  color: $color-black;
}

#productrelated {
  // background-color: #f3f1ef;
  background-color: $color-productrelated;

  h2 {
    color: $color-black;
  }
}

.pimage,
.thumbnail {
  box-shadow:
    0 2px 2px 0 rgba(0,0,0,.14),
    0 3px 1px -2px rgba(0,0,0,.2),
    0 1px 5px 0 rgba(0,0,0,.12);
}

#pimage-select a img {
  background-color: #eee;
}

.price {
  color: $color-link;
}

ul#variants label {
  color: grey;
}

#productpage #description a {
  color: $color-link;
}

#productpage #description #details {
  background-color: #edece6;
  color: grey;
}

.limited {
  background-color: yellow;
}

.convert a {
  color: #8ec7ff;
}

/* Footer */
#footer {
  color: $color-header-cart-text;
  background-color: $color-header-cart;
  border-top-color: #dfdcd7;
}

#footer #searchform #s {
  border: #f6f6f6;
}

#footer a {
  color: $color-footer;
}

#footer #searchform #s {
  color: $color-footer;
  background-color: rgba(255, 255, 255, 0.5);
}

#footer #footertxt {
  color: $color-footer;
}

#footer .spacedot {
  color: blue;
  background-color: orange;
}
