form {
  width: 100%;
  padding: 0.5rem;
  box-sizing: border-box;
}

#cart {
  // border: 1px solid #dadfcf;
  // -moz-border-radius: 4px;
  // -webkit-border-radius: 4px;
}

#cart .emptycart {
  text-align: center;
  padding: 64px 24px;
}

h3.saverow {
  padding: 12px 0;
  width: 100%;
  display: table;
  text-align: center;
  margin-bottom: 12px;
}

/* Cart Page: Single Product Line */
#line-items {
  list-style: none;
  margin: 0;
  padding: 0;
}

#line-items li {
  padding: 6px 0;
  margin-bottom: 6px;
  position: relative;
  display: table;
  width: 100%;
}

#line-items li .thumb {
  float: left;
  display: table;
  width: 50px;
  height: 50px;
  padding: 0;
  margin: 6px 12px;
}

#line-items li .thumb a {
  margin: 0;
  border: 1px solid #fff;
  text-align: center;
  float: left;
}

#line-items li .thumb a:hover {
  border-color: dodgerblue;
}

#line-items li .txtcartrow {
  margin-top: 1rem;
  // display: table;
  // width: 572px;
  text-align: right;
}

#line-items li .txtcartrow .producttitle,
#line-items li .txtcartrow .producttitle a {
  display: inline;
  float: left;
}

#cart li .txtcartrow .quantities {
  display: inline;
}

.deleterow {
  margin-top: 6px;
  display: table;
}

#line-items li.itemline {
  border-bottom: 1px dashed #ccc;
}

.deleterow .remove {
  text-align: right;
  padding: 3px 6px;
  -moz-border-radius: 4px;
  -webkit-border-radius: 4px;
  border-width: 0;
  margin-left: -2px;
}

#cart label {
  padding-right: 3px;
}

#cart ul li h3 {
  width: 480px;
}

#line-items li#total {
  text-align: right;
  line-height: 1.2em;
}

#line-items li#total .subtotal {
  margin: 0;
  float: right;
  padding: 3px 12px;
  margin-left: 24px;
}

#line-items li#total .buttonAsLink {
  text-align: right;
  padding: 3px 6px;
  -moz-border-radius: 4px;
  -webkit-border-radius: 4px;
  border-width: 0;
  cursor: pointer;
}

.checkoutrow {
  text-align: right;
  margin-top: 24px;
}

.checkoutrow label {
  margin-right: 6px;
}

.checkoutrow img {
  margin: 0 1px;
}

.shipinfo {
  float: left;
  margin-left: 12px;
}
