$cell: {{ settings.cell }};
$cell-margin: {{ settings.cell-margin }};
$content-min-width: 2 * $cell + 3 * $cell-margin;
$breakpoint: {{ settings.breakpoint }};

$cell-margin-half: $cell-margin * 0.5;
$cell-margin-2x: $cell-margin * 2;
$cell-margin-3x: $cell-margin * 3;
$cell-margin-4x: $cell-margin * 4;

.cart-banner,
.emptycart {
  width: calc(100% - 1rem);
  text-align: center;
  box-sizing: border-box;
  padding: $cell-margin-4x;
  margin: $cell-margin $cell-margin 0 $cell-margin;
  border: 1px dashed #d2d1cd;
}

#cartbox {
  width: 100%;
  padding: $cell-margin;
  box-sizing: border-box;
}

/* Cart Page: Single Product Line */
#line-items {
  list-style: none;
  margin: 0;
  padding: 0;

  .itemline {
    box-sizing: border-box;
    padding: $cell-margin;
    border-bottom: 1px dashed #ccc;
    margin: 0;

    .cart-product-thumb {
      float: left;
      display: table;
      margin: 0;
      width: 50px;
      height: 50px;
      padding: 0;
    }

    .cart-product-title {
      display: inline;
      float: left;
      margin-left: $cell-margin;
      text-align: left;

      // crop product title when narrow layout
      // 2 column container
      @media only screen
        and (max-width: (3 * $cell + 4 * $cell-margin)) {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        max-width: 12rem;
      }
    }

    .cart-product-quantity {

      white-space: nowrap;

      .cartqty {
        margin: 0 0 0 1rem;
      }

      input {
        padding: 0 $cell-margin;
        border: 0;
        margin: 0;
        text-align: right;
        background: rgba(255, 255, 255, 0.5);
      }

      label {
        width: 8rem;
        margin-right: $cell-margin;
        display: inline-block;
      }
    }
  }
  #cart-subtotal-row {
    text-align: right;
    line-height: 1.2em;

    #cart-subtotal {
      margin: 0;
      float: right;
      padding: $cell-margin $cell-margin-2x;
      margin-left: 1rem;
    }
  }
}

#line-items li {
  padding: 6px 0;
  margin-bottom: 6px;
  position: relative;
  display: table;
  width: 100%;
}

#line-items li .cart-product-thumb a:hover {
  border-color: dodgerblue;
}

#line-items li .cart-product-row {
  margin-top: 1rem;
  text-align: right;
}

#cart li .cart-product-row .cart-product-quantity {
  display: inline;
}

.deleterow {
  margin-top: 6px;
  display: table;
}

.deleterow .remove {
  text-align: right;
  padding: 3px 6px;
  -moz-border-radius: 4px;
  -webkit-border-radius: 4px;
  border-width: 0;
  margin-left: -2px;
}

#cart ul li h3 {
  width: 480px;
}

.checkout-row {
  text-align: right;
  margin-top: 24px;
}

.checkout-row img {
  margin: 0 1px;
}

.shipinfo {
  float: left;
  margin-left: 12px;
}
