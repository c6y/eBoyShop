$cell-margin: {{ settings.cell-margin }};

$cell-margin-half: $cell-margin * 0.5;
$cell-margin-double: $cell-margin * 2;
$cell-margin-triple: $cell-margin * 3;

form {
  width: 100%;
  padding: $cell-margin;
  box-sizing: border-box;
}

#cart .emptycart {
  text-align: center;
  padding: 64px 24px;
}

h3.saverow {
  width: calc(100% - 1rem);
  text-align: center;
  box-sizing: border-box;
  padding: 3rem 0.5rem;
  margin: 0.5rem 0.5rem 0 0.5rem;
}

/* Cart Page: Single Product Line */
#line-items {
  list-style: none;
  margin: 0;
  padding: 0;

  .itemline {
    box-sizing: border-box;
    padding: $cell-margin;
    border-bottom: 1px dashed #ccc;
    margin: 0;

    .thumb {
      float: left;
      display: table;
      margin: 0;
      width: 50px;
      height: 50px;
      padding: 0;
    }

    .producttitle {
      display: inline;
      float: left;
      margin-left: $cell-margin;
    }

    .quantities {

      .cartqty {
        margin: 0 0 0 1rem;
      }

      input {
        padding: 0 $cell-margin;
        border: 0;
        margin: 0;
        text-align: right;
        background: rgba(255, 255, 255, 0.5);
      }

      label {
        width: 8rem;
        margin-right: $cell-margin;
        display: inline-block;
      }
    }
  }
  #total {
    text-align: right;
    line-height: 1.2em;

    #subtotal {
      margin: 0;
      float: right;
      padding: $cell-margin $cell-margin-double;
      margin-left: 1rem;
    }
  }
}

#line-items li {
  padding: 6px 0;
  margin-bottom: 6px;
  position: relative;
  display: table;
  width: 100%;
}

#line-items li .thumb a:hover {
  border-color: dodgerblue;
}

#line-items li .txtcartrow {
  margin-top: 1rem;
  text-align: right;
}

#cart li .txtcartrow .quantities {
  display: inline;
}

.deleterow {
  margin-top: 6px;
  display: table;
}

.deleterow .remove {
  text-align: right;
  padding: 3px 6px;
  -moz-border-radius: 4px;
  -webkit-border-radius: 4px;
  border-width: 0;
  margin-left: -2px;
}

#cart ul li h3 {
  width: 480px;
}

.checkoutrow {
  text-align: right;
  margin-top: 24px;
}

.checkoutrow img {
  margin: 0 1px;
}

.shipinfo {
  float: left;
  margin-left: 12px;
}
