#cart li .txtcartrow .quantities {
  display: inline;
}

.deleterow {
  margin-top: 6px;
  display: table;
}

.deleterow .remove {
  text-align: right;
  padding: 3px 6px;
  -moz-border-radius: 4px;
  -webkit-border-radius: 4px;
  border-width: 0;
  margin-left: -2px;
}

#cart ul li h3 {
  width: 480px;
}

#line-items li#total {
  text-align: right;
  line-height: 1.2em;
}

#line-items li#total .subtotal {
  margin: 0;
  float: right;
  padding: 3px 12px;
  margin-left: 24px;
}

.checkoutrow {
  text-align: right;
  margin-top: 24px;
}

.checkoutrow label {
  margin-right: 6px;
}

.checkoutrow img {
  margin: 0 1px;
}

.shipinfo {
  float: left;
  margin-left: 12px;
}
