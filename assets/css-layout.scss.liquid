$cell: {{ settings.cell }};
$cell-margin: {{ settings.cell-margin }};
$content-min-width: 2 * $cell + 3 * $cell-margin;
$breakpoint: {{ settings.breakpoint }};

$cell-margin-half: $cell-margin * 0.5;
$cell-margin-2x: $cell-margin * 2;
$cell-margin-3x: $cell-margin * 3;
$cell-margin-4x: $cell-margin * 4;

$color-link: {{ settings.color-link }};
$color-black: {{ settings.color-black }};
$color-header-cart: {{ settings.color-header-cart }};
$color-line: {{ settings.color-line }};
$color-related: #6a6858;
// $color-blackline-50: rgba($color-black, 0.5);
// $color-linkline-50: rgba($color-link, 0.75); // opaque link color

#mainbox {
  display: flex;
  flex-wrap: wrap;
  padding: 0;
  flex-grow: 1;
  align-items: baseline;
  flex-direction: column;
  z-index: 20;
}

/* Left Navigation */
#sidebar-menu {
  box-sizing: border-box;
  padding: $cell-margin;
  overflow: hidden;
  display: flex;

  // mobile 2 column width
  @media only screen
    and (max-width: (3 * $cell + 4 * $cell-margin)) {
    min-width: 2 * $cell + 3 * $cell-margin;
    max-width: 2 * $cell + 3 * $cell-margin;
    justify-content: space-between;
    flex-direction: row;

    hr {
      display: none;
    }
    .sidebar-menu-collections,
    .sidebar-menu-links {
      border-left: 1px dashed $color-line;
    }
  }

  // desktop 3+ column width
  @media only screen
    and (min-width: (3 * $cell + 4 * $cell-margin)) {
    width:  $cell + $cell-margin;
    min-width: $cell + $cell-margin;
    max-width: $cell + $cell-margin;
    flex-direction: column;

    hr {
      border: none;
      border-top: 1px dashed $color-line;
      margin: $cell-margin;
    }
  }

  .sidebar-menu-collections,
  .sidebar-menu-links {
    padding: $cell-margin;
    box-sizing: border-box;
    margin: 0;
    width: 100%;

    li {
      list-style: none;
      padding: $cell-margin 0 $cell-margin $cell-margin;

      a {
        margin: 0;

        &:hover {
          margin-left: -6px;
          padding: 0 6px;
        }
      }
    }
  }

}

/* Home Page */
