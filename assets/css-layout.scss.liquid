/* PRODUCTS */
/* Products on the Front Page */
#frontarticles {
  margin: 0 0 24px 0;
}

#frontarticles h1 {
  position: absolute;
  margin-top: 24px;
  margin-left: 12px;
  padding: 0 12px;
  font-weight: bold;
}

.product-featured {
  width: 100%;
  margin: $cell-margin * 0.5
}

.coverpic {
  width: 100%;
  margin: 0;
}

/* Collection Pages */

#collectionbox,
#mainbox-frontpage {
  display: flex;
  flex-wrap: wrap;
  padding: $cell-margin * 0.5;
}

#collectionbox h1 {
  margin-bottom: 12px;
}

#collectionbox h2 {
  padding-top: 12px;
  margin: 0;
}

.product {
  float: left;
  width: $cell;
  margin: $cell-margin * 0.5;
}

.product h3 {
  margin: 0;
}

.gallery-image img {
  width: $cell;
  height: $cell;
}

.productbasic {
  padding: 6px 6px 9px 6px;
}

#pagination {
  display: table;
  margin: 0;
  padding: $cell-margin-2x 0;
  width: 100%;
  box-sizing: border-box;

  a,
  .current {
    margin-right: $cell-margin;
    padding: $cell-margin-half $cell-margin;
    text-align: center;
  }

  a {
    text-decoration: none;
    border: 1px solid $color-link;

    &:hover,
    &:active {
      border: 1px solid $color-link;
    }
  }

  .current {
    border: 1px solid $color-header-cart;
  }
}

/* Pages  */
/* includes Search Page, which is mostly identical to the Collection Page */
#page {
  margin: 0;
  width: 100%;
  padding: $cell-margin-half;
  box-sizing: border-box;

  .pagetitlebox {
    width: 100%;
    padding: $cell-margin-half;
    box-sizing: border-box;
  }

  h1 {
    width: 100%;
    margin: 0 0 $cell-margin-3x 0;
    padding: $cell-margin-2x $cell-margin $cell-margin-2x $cell-margin-2x;
    box-sizing: border-box;
    border-bottom: 1px solid $color-line;
  }

  .textile {
    padding: $cell-margin-half $cell-margin-3x $cell-margin-2x $cell-margin-3x;
    box-sizing: border-box;
  }
}

#productbox {
  display: flex;
  flex-wrap: wrap;
  flex-grow: 1;
  align-items: baseline;
  flex-direction: column;
  z-index: 20;
  padding: 0;

  h1 {
    padding: 0 $cell-margin-half;
    margin: 0 0 $cell-margin-2x 0;
    box-sizing: border-box;
  }
}

#product-images {
  width: 100%;
  padding: 0.25rem;
  // background-color: yellow;
  box-sizing: border-box;
}

.bigsquare {
  width: 100%;
}

a.productimage {
  width: $cell;
  margin: $cell-margin;
  padding: 0;
  text-align: center;
  float: left;
}

a.productimage-small {
  width: 115px;
  margin: 5px 0 5px 10px;
  padding: 10px 0;
  text-align: center;
  float: left;
}

a.productimage:hover,
a.productimage-small:hover {
  border-color: #000;
}

.pimage {
  margin: $cell-margin * 0.5;
}

#pimage-select {
  width: 100%;
  margin: 0;
  padding: 0;
  float: left;

  .thumbnail {
    margin: $cell-margin * 0.5;
    width: $cell;
    height: $cell;
    float: left;

    img {
      width: 100%;
    }
  }
}

ul.hlist {
  list-style: none;
  margin: 0;
  padding: 0;
}

.hlist li {
  display: inline;
}

ul#variants {
  list-style: none;
  margin: 6px 0 0 0;
  padding: 0;
}

ul#variants li input,
ul#variants li label {
  vertical-align: middle;
}

#variant-dropdown {
  margin: $cell-margin-half 0 0 0;
}

#sidebarright {
  box-sizing: border-box;
  padding: $cell-margin;
  display: flex;
  // background-color: lightgrey;

  // mobile 2 column width
  @media only screen
    and (max-width: (3 * $cell + 4 * $cell-margin)) {
    width: (2 * $cell + 3 * $cell-margin);
    min-width: (2 * $cell + 3 * $cell-margin);
    max-width: (2 * $cell + 3 * $cell-margin);
    flex-direction: row-reverse;
    justify-content: space-between;
  }

  // desktop 3+ column width
  @media only screen
    and (min-width: (3 * $cell + 4 * $cell-margin)) {
    width: $cell;
    min-width: $cell + $cell-margin;
    max-width: $cell + $cell-margin;
    flex-direction: column;
  }

  #productcontrols,
  #description {
    box-sizing: border-box;
    width: $cell;
    padding: $cell-margin-2x;
    margin: 0;
    border-left: 1px dashed $color-line;
  }

  #productcontrols {
    .producttopinfo,
    .producttopinfosold {
      width: 100%;

      .productinfo {
        margin: 0;
        left: 0;
        top: 0;
        width: 100%;
        margin-top: $cell-margin * -0.75; // raise x-height to match description
      }
    }

    form {
      padding: 0;
      margin: 0;

      .price {
        // float: right;
        margin: 0;
        display: block;
      }
    }
  }
}

