/* Footer */
#app-footer {
  padding: 0;
  margin: 0;
  display: flex;
  flex-direction: column;
  overflow: hidden;
    #productrelated {
      margin: 0;
      padding: $cell-margin * 0.5;

      h2 {
        margin: $cell-margin $cell-margin * 0.5;
        font-weight: 500;
        padding-top: $cell-margin-2x;
        border-top: 1px dashed #d2d1cd;
      }
      .gallery-image img {
        filter: grayscale(100%) opacity(0.75);
      }
    }
}

#footer {
  margin: 0;
  clear: left;
  width: 100%;
  text-align: right;
  display: table;

  #searchform {
    width: auto;
    height: auto;
    display: inline;
    clear: left;
    float: left;
    padding: $cell-margin $cell-margin-3x;
    margin: auto;
    vertical-align: top;

    #s {
      padding: 0 $cell-margin;
      margin: 0;
      display: inline;
      vertical-align: top;
      line-height: 2rem;
      width: $cell - $cell-margin-4x;
      box-sizing: border-box;
    }
  }

  #footertxt {
    width: auto;
    float: right;
    text-align: right;
    padding: $cell-margin $cell-margin-2x $cell-margin $cell-margin-2x;
    display: inline-table;

    div {
      white-space: nowrap;
    }
  }
}

#footer .spacedot {
  vertical-align: top;
  visibility: hidden;
  line-height: 36px;
  display: inline;
  float: left;
}

.additional_checkout_buttons {
  display: none;
}

