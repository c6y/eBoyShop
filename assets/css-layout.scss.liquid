//   padding: 0;
// }

.coverproduct {
  width: 100%;
  margin: $cell-margin * 0.5
}


.coverpic {
  width: 100%;
  margin: 0;
}

/* Collection Pages */

#collectionbox,
#frontbox {
  display: flex;
  flex-wrap: wrap;
  padding: $cell-margin * 0.5;
}

#collectionbox h1 {
  margin-bottom: 12px;
}

#collectionbox h2 {
  padding-top: 12px;
  margin: 0;
}

.product {
  float: left;
  width: $cell;
  margin: $cell-margin * 0.5;
}

.product h3 {
  margin: 0;
}

.gallery-image img {
  width: $cell;
  height: $cell;
}

.productbasic {
  padding: 6px 6px 9px 6px;
}



#pagination {
  display: table;
  clear: left;
  margin: 24px 0 0 0;
}

#pagination a {
  margin-right: 4px;
  padding: 3px 6px;
  text-align: center;
  text-decoration: none;
  -moz-border-radius: 4px;
  -webkit-border-radius: 4px;
  border: 1px solid lightgrey;
}

#pagination a:hover,
#pagination a:active {
  border: 1px solid black;
}

#pagination .current {
  margin-right: 6px;
  padding: 3px 6px;
  text-align: center;
  text-decoration: none;
  -moz-border-radius: 4px;
  -webkit-border-radius: 4px;
  border-top: 1px solid black;
  border-left: 1px solid black;
  border-right: 1px solid black;
  border-bottom: 1px solid black;
}

/* Search Pages (mostly identical to the Collection Page) */
#searchpage {
  margin: 0;
  padding: 0;
}

#searchpage h1 {
  width: 648px;
}

#productbox {
  display: flex;
  flex-wrap: wrap;
  // padding: 0;
  flex-grow: 1;
  align-items: baseline;
  flex-direction: column;
  z-index: 20;
  padding: $cell-margin * 0.5 0 $cell-margin * 0.5 $cell-margin * 0.5;
}

#productbox h1 {
  padding: 0 6px;
  margin: 0 0 12px 0;
}

