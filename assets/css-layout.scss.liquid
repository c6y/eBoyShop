$cell: {{ settings.cell }};
$cell-margin: {{ settings.cell-margin }};
$content-min-width: 2 * $cell + 3 * $cell-margin;
$breakpoint: {{ settings.breakpoint }};

// mobile
@media only screen
  and (max-device-width: $breakpoint) {
  #mainbox {
    min-width: 100%;
  }
}

#mainbox {
  display: flex;
  flex-wrap: wrap;
  padding: 0;
  flex-grow: 1;
  align-items: baseline;
  flex-direction: column;
  z-index: 20;
}

/* Left Navigation */
#sidebarleft {
  box-sizing: border-box;
  width: $cell;
  padding: $cell-margin;
  overflow: hidden;
  min-width: $cell + $cell-margin;
  max-width: $cell + $cell-margin;
}

ul.leftlinks {
  margin: 0 0 $cell-margin 0;
  padding: $cell-margin 0 $cell-margin $cell-margin;
  width: 210px;
  clear: left;
}

ul.leftlinks li {
  list-style: none;
  padding: 0;
}

ul.leftlinks li a {
  margin: 0;
}

ul.leftlinks li a:hover {
  margin-left: -6px;
  padding: 0 6px;
}

hr {
  border: 0;
  padding: 0;
  margin: 1rem 0 1rem 0;
  height: 1px;
  background-image: linear-gradient(to right, #00baf2, rgba(255,255,255,0));
}

/* Home Page */
.love {
  position: absolute;
  display: inline;
  z-index: 300;
  margin-top: 520px;
  margin-left: -36px;
}

/* Page */
#page {
  margin: 0;
  width: 660px;
}

#page h1 {
  width: 648px;
}

/* PRODUCTS */
/* Products on the Front Page */
#frontarticles {
  margin: 0 0 24px 0;
}

#frontarticles h1 {
  position: absolute;
  margin-top: 24px;
  margin-left: 12px;
  padding: 0 12px;
  font-weight: bold;
}

