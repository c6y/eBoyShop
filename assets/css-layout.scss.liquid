.signedpro {
  position: absolute;
  display: inline;
  z-index: 300;
  display: inline;
  margin-top: 400px;
  margin-left: -36px;
}

.convert a:after {
  content: "\2197";
}

.zoom:after {
  content: "\2197";
}

/* Footer */
#appfooter {
  background-color: rgba(255,255,255,0.93);
  padding: 0;
  margin: 0;
  display: flex;
  flex-direction: column;
  overflow: hidden;
    #productrelated {
      margin: $cell-margin * 2 0 0 0;
      padding: $cell-margin * 0.5;

      hr {
        background-image: linear-gradient(to right, #383521, rgba(255,255,255,0));
        opacity: 0.3;
        margin: $cell-margin * 2 0 $cell-margin * 0.5 0
      }
      h2 {
        margin: $cell-margin * 2 $cell-margin * 0.5;
        color: #383521;
        font-weight: 500;
        opacity: 0.4;
      }
      img {
        filter: grayscale(100%) opacity(0.75);
      }
    }
}

#footer {
  margin: 0;
  clear: left;
  width: 100%;
  text-align: right;
  display: table;
  border-top: 1px solid;
}

#footer #searchform {
  width: auto;
  height: auto;
  display: inline;
  clear: left;
  float: left;
  padding: 12px 24px 12px 24px;
  margin: auto;
  vertical-align: top;
}

#footer #searchform #s {
  border-top: 1px solid;
  border-right: 1px solid;
  border-bottom: 1px solid;
  border-left: 1px solid;
  padding: 3px 12px 3px 12px;
  margin: auto;
  display: inline;
  vertical-align: top;
  line-height: 24px;
  width: 190px;
}

#footer #footertxt {
  width: auto;
  float: right;
  vertical-align: top;
  height: auto;
  text-align: right;
  padding: 12px 24px 12px 24px;
}

#footer #footertxt div {
  white-space: nowrap;
}

#footer .spacedot {
  vertical-align: top;
  visibility: hidden;
  line-height: 36px;
  display: inline;
  float: left;
}

.additional_checkout_buttons {
  display: none;
}

/* {% comment %} Added by Alida W @ Shopify April 6 2016 {% endcomment %} */
.visually-hidden {
  display: none !important;
}
