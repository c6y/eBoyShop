.BUYbutton {
  margin: 12px 0;
  display: block;
  width: 144px;
  height: 72px;
  background: url(BUY-2x.png) center top no-repeat;
  background-size: 144px 72px;
}

.BUYbutton:hover {
  background: url(BUY-2x-HOVER.png);
  background-size: 144px 72px;
}

.SOLDbutton {
  width: 168px;
  height: 72px;
  margin: 12px 0;
}

.APPSTOREbutton {
  width: 168px;
  height: 72px;
  margin: 12px 0;
}

.APPSTOREbutton:hover {
  cursor: pointer;
}

#product-images {
  width: 100%;
}

.bigsquare {
  width: 100%;
}

a.productimage {
  width: $cell;
  margin: $cell-margin;
  padding: 0;
  text-align: center;
  float: left;
}

a.productimage-small {
  width: 115px;
  margin: 5px 0 5px 10px;
  padding: 10px 0;
  text-align: center;
  float: left;
}

a.productimage:hover,
a.productimage-small:hover {
  border-color: #000;
}

.pimage {
  margin: $cell-margin * 0.5 $cell-margin $cell-margin * 0.5 $cell-margin * 0.5;
}

#pimage-select {
  width: 100%;
  margin: 0;
  padding: 0;
  float: left;

  .thumbnail {
    margin: $cell-margin * 0.5;
    width: $cell;
    height: $cell;
    float: left;

    img {
      width: 100%;
    }
  }
}

ul.hlist {
  list-style: none;
  margin: 0;
  padding: 0;
}

.hlist li {
  display: inline;
}

ul#variants {
  list-style: none;
  margin: 6px 0 0 0;
  padding: 0;
}

ul#variants li input,
ul#variants li label {
  vertical-align: middle;
}

#variant-dropdown {
  margin-top: 12px;
}

#sidebarright {
  box-sizing: border-box;
  width: $cell;
  padding: $cell-margin;
  overflow: hidden;
  min-width: $cell + $cell-margin;
  max-width: $cell + $cell-margin;
}

#description {
  display: table;
  width: 100%;
  padding-top: 2rem;
  border-top: 1px lightgrey solid;
  margin: 2rem 0 0 0;
}

#description p {
  margin: 0 0 $cell-margin 0;
}

#productlinks {
  display: table;
  width: 198px;
  padding-top: 12px;
  border-top: 1px lightgrey solid;
  margin: 12px 0 0 0;
}

.productinfo {
  left: 0;
  top: 0;
  width: 100%;
}

#productcontrols {
  width: 100%;
  padding: 0;
  margin: 0;
}

.producttopinfo,
.producttopinfosold {
  width: 100%;
}

.soldoutsticker {
  position: absolute;
  margin-left: 28px;
  margin-top: 46px;
}

.limited {
  float: right;
  text-align: center;
  border-top: 1px dotted orange;
  border-bottom: 1px dotted orange;
  margin: 3px 0 3px 0;
  padding: 3px 6px;
}

