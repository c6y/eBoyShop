$cell: {{ settings.cell }};
$cell-margin: {{ settings.cell-margin }};
$content-min-width: 2 * $cell + 3 * $cell-margin;
$breakpoint: {{ settings.breakpoint }};


#appheader {
  width: 0 auto;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  position: relative;
  flex-direction: column;

  #appheader-left {
    position: relative;
    padding: 0;
    margin: 0 0 0 $cell * 0.25;

    #logotype {
        padding: 0 1rem 0 1.5rem;
    }
  }

  #carthead {
    border-top: 1px solid #f2eed9;
    margin: 0;
    width: 100%;
    padding: 12px 0;
    text-align: right;
    display: table;
    border-bottom: 1px solid #eae7d0;
  }
}


/* Submenublock */
#carthead #breadcrumb {
  float: left;
  margin: 0 0 0 1.5rem;
}

h1#cartcount {
  padding: 0;
  margin: 0 24px 0 0;
  white-space: nowrap;
}

#breadcrumb a,
#cartcount a {
  padding: 0;
  text-decoration: none;
}

#breadcrumb a:hover,
#cartcount a:hover {
  margin-left: -6px;
  margin-right: -6px;
  padding: 0 6px;
  text-decoration: none;
}
