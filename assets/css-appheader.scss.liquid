$cell: {{ settings.cell }};
$cell-margin: {{ settings.cell-margin }};
$content-min-width: 2 * $cell + 3 * $cell-margin;
$breakpoint: {{ settings.breakpoint }};
$color-header-cart: {{ settings.color-header-cart }};
$color-header-border: darken( $color-header-cart, 3% );

$cell-margin-half: $cell-margin * 0.5;
$cell-margin-2x: $cell-margin * 2;
$cell-margin-3x: $cell-margin * 3;
$cell-margin-4x: $cell-margin * 4;

#appheader {
  width: 0 auto;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  position: relative;
  flex-direction: column;

  #appheadertop {
    position: relative;
    padding: $cell-margin $cell-margin $cell-margin-3x $cell-margin-2x;
    margin: 0;
    box-sizing: border-box;
    text-align: left;

    #logotype {
      padding: 0;
    }
  }

  #carthead {
    margin: 0;
    width: 100%;
    padding: $cell-margin 0;
    text-align: right;
    display: table;
    // border-bottom: 1px solid $color-header-border;

    #breadcrumb {
      float: left;
      margin: 0 0 0 $cell-margin-3x;
    }

    #cartcount {
      padding: 0;
      margin: 0 $cell-margin-2x 0 0;
      white-space: nowrap;
    }

    #breadcrumb a,
    #cartcount a {
      padding: 0;
      text-decoration: none;
    }

    #breadcrumb a:hover,
    #cartcount a:hover {
      margin-left: -6px;
      margin-right: -6px;
      padding: 0 6px;
      text-decoration: none;
    }
  }
}
