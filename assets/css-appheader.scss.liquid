$cell: {{ settings.cell }};
$cell-margin: {{ settings.cell-margin }};
$content-min-width: 2 * $cell + 3 * $cell-margin;
$breakpoint: {{ settings.breakpoint }};
$color-header: {{ settings.color-header }};
$color-header-border: darken( $color-header, 3% );

$cell-margin-half: $cell-margin * 0.5;
$cell-margin-double: $cell-margin * 2;
$cell-margin-triple: $cell-margin * 3;

#appheader {
  width: 0 auto;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  position: relative;
  flex-direction: column;

  #appheadertop {
    position: relative;
    padding: $cell-margin-double;
    margin: 0;
    // height: 8rem;
    box-sizing: border-box;

    #logotype {
      padding: 0 $cell-margin-double 0 $cell * 0.25;
    }
  }

  #carthead {
    margin: 0;
    width: 100%;
    padding: $cell-margin 0;
    text-align: right;
    display: table;
    border-bottom: 1px solid $color-header-border;

    #breadcrumb {
      float: left;
      margin: 0 0 0 $cell-margin-triple;
    }

    #cartcount {
      padding: 0;
      margin: 0 $cell-margin-double 0 0;
      white-space: nowrap;
    }

    #breadcrumb a,
    #cartcount a {
      padding: 0;
      text-decoration: none;
    }

    #breadcrumb a:hover,
    #cartcount a:hover {
      margin-left: -6px;
      margin-right: -6px;
      padding: 0 6px;
      text-decoration: none;
    }
  }
}
