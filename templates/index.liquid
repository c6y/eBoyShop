<div id="mainbox-frontpage">
  {% if blogs.frontpage.articles_count > 0 %}
    <div id="frontarticles">
      {% for article in blogs.frontpage.articles  %}
          <h1>{{ article.title }}</h1>
          <div class="article textile">
            {{ article.content }}
          </div>
      {% endfor %}
    </div>
  {% endif %}

  {% for product in collections.frontcover.products %}
    <div class="product-featured">
      <!-- banderole -->
      {% for collection in product.collections %}
        {% case collection.handle %}
          {% when 'new' %}
            <img class="banderole-new " src="{{ 'new5k.svg' | asset_url }}" alt="new" height="107" width="107"/>
          {% else %}
        {% endcase %}
      {% endfor %}
      <div class="coverpic">
        <a href="{{product.url}}" title="{{ item.title }}">
           <img class="bigsquare" src="{{ product.featured_image | product_img_url: 'original'}}" alt="{{product.title}}" />
        </a>
      </div>
    </div>
  {% endfor %}

  <!-- featured products -->
  {% for product in collections.frontpage.products %}
    {% include 'galleryproduct' %}
  {% endfor %}
</div>
