<div id="frontbox">
  {% if blogs.frontpage.articles_count > 0 %}
    <div id="frontarticles">
      {% for article in blogs.frontpage.articles  %}
          <h1>{{ article.title }}</h1>
          <div class="article textile">
            {{ article.content }}
          </div>
      {% endfor %}
    </div>
  {% endif %}

  {% for product in collections.frontcover.products %}
    <!-- cover products -->
    <div class="coverproduct">
      <!-- banderolas -->
      {% for collection in product.collections %}
        {% case collection.handle %}
          {% when 'new' %}
            <img class="new" src="{{ 'new5k.svg' | asset_url }}" alt="new" height="107" width="107"/>
          {% when 'soon' %}
            <img class="new" src="{{ 'soon01k.png' | asset_url }}" alt="soon" />
          {% when 'pre-order' %}
            <img class="newbig" src="{{ 'PREORDERBANNER-02k-2x.png' | asset_url }}" alt="pre-order" />
          {% else %}
        {% endcase %}
      {% endfor %}
      <!-- cover product image -->
      <div class="coverpic">
        <a href="{{product.url}}" title="{{ item.title }}">
           <img class="bigsquare" src="{{ product.featured_image | product_img_url: 'original'}}" alt="{{product.title}}" />
        </a>
      </div>
    </div>
  {% endfor %}

  <!-- featured products -->
  {% for product in collections.frontpage.products %}
    {% include 'galleryproduct' %}
  {% endfor %}
</div>
